.bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-image {
  width: 100%;
  height: 100%;
}
.login_logo{
  text-align: center;
  margin-top: 4rem;
}
.logoin-image {
  width: 200px;
  height: 50px;
  display: inline-block
}
.login_span{
  display: block;
  margin: 5px auto;
  color:#fff;
  font-size: 1.6rem;

}
.login_content{
  margin:2.4rem auto 0.2rem auto;
  width: 75%;
  overflow: hidden;

}
.login_content input[type="text"],input[type="password"]{
  margin-top:2rem; 
  height: 2rem; 
  line-height: 2rem; 
  border: 1px solid #fff; 
  background-position: 0.4rem center; 
  background-repeat: no-repeat;
  background-color: #fff;
  border-radius: 0.2rem;
  padding-left: 2.4rem;
}
.username {
  background-image: url(http://www.jlszjc.com/mobileClient/view/images/user.png);
  
}
.password {
   background-image: url(http://www.jlszjc.com/mobileClient/view/images/password.png);

}
.submit{
  margin:2rem auto 0 auto;
  background-color: #ff8004;
  display: block;
  font-size: 1rem;
  height: 2.4rem; 
  line-height: 2.4rem; 
}
.footer{
  text-align: center;
  margin-top: 2rem;
  color: #fff;
  font-size: 0.8rem;
  line-height: 2rem;
}
